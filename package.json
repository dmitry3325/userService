{
  "name": "userservice",
  "version": "1.0.0",
  "description": "DNB user service",
  "main": "dist/index.js",
  "scripts": {
    "serve": "npm run start:dev",
    "build": "webpack",
    "build:prod": "cross-env NODE_ENV=production npm run swagger && npm run tsc",
    "start:dev": "cross-env NODE_ENV=development webpack",
    "run:dev": "cross-env NODE_ENV=development nodemon --inspect build/index.js",
    "lint": "eslint -c .eslintrc.js ./src/**/*.ts",
    "tsc": "tsc --traceResolution && tscpaths -p tsconfig.json -s ./ -o ./dist",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register tests/**/*.ts",
    "serve:swagger": "npm run swagger && npm run serve",
    "swagger": "swagger-jsdoc -d swaggerDef.js -o resources/doc.json"
  },
  "author": "Dima",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.2",
    "express": "^4.17.2",
    "chai": "^4.2.0",
    "swagger-jsdoc": "^4.2.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/chai": "^4.2.14",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@types/mocha": "^8.0.4",
    "mocha": "^8.2.1",
    "eslint": "^7.10.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.4.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.5.4",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
